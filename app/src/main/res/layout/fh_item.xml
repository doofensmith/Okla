<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="12dp"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:id="@+id/fhi_container">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="120dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:text="CR"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@android:color/darker_gray"/>-->

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginHorizontal="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/fhi_tv_namachatroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Chat Room"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/fhi_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/badge1"
                android:text="999+"
                android:textSize="12sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/fhi_tv_lastchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="tulisan chat terakhir"
            android:textSize="12sp"
            android:gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>